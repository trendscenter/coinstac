{
  "meta": {
    "name": "Ridge Regression (Singleshot) - VBM",
    "id": "ssr-vbm",
    "version": "v1.0.0",
    "repository": "",
    "description": "Decentralized Regression (Singleshot) for Voxel-based Morphometry"
  },
  "computation": {
    "type": "docker",
    "dockerImage": "coinstacteam/ssr-vbm",
    "command": [
      "python",
      "\/computation\/scripts\/local.py"
    ],
    "remote": {
      "type": "docker",
      "dockerImage": "coinstacteam/ssr-vbm",
      "command": [
        "python",
	"\/computation\/scripts\/remote.py"
      ]
    },
    "input": {
      "covariates": {
        "label": "Covariates",
        "type": "csv",
        "items": ["boolean", "number"],
        "source": "member",
        "order": 0
      },
      "data": {
        "label": "Data",
        "type": "freesurfer",
        "items": ["FreeSurfer"],
        "extensions": ["csv", "txt"],
        "source": "owner",
        "order": 1
      },
      "lambda":
      {
        "default": 0,
        "label": "Lambda",
        "max": 1,
        "min": 0,
        "step": 0.05,
        "type": "number",
        "source": "owner",
        "order": 2
      },
      "threshold":
      {
        "default": 0.2,
        "label": "Masking threshold",
        "max": 1,
        "min": 0,
        "type": "number",
        "source": "owner",
        "order": 3
      },
      "voxel_size":
      {
        "default": 4,
        "label": "Voxel Size",
        "max": 6,
        "min": 0,
        "step": 0.5,
        "type": "number",
        "source": "owner",
        "order": 4
      }
    },
    "output": {
      "avg_beta_vector": {
        "label": "Avg Beta Vector",
        "type": "array"
      },
      "r_2_global": {
        "label": "R2 Global",
        "type": "number"
      },
      "ts_global": {
        "label": "TS Global",
        "type": "array"
      },
      "ps_global": {
        "label": "PS Global",
        "type": "number"
      },
      "dof_global": {
        "label": "DOF Global",
        "type": "array"
      }
    },
    "display": {
      "type": "images"
    }
  }
}
