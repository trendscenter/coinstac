{
   "meta":{
      "id":"fmri-pre",
      "name":"fMRI Preprocessing Pipeline (New)",
      "version":"v1.0.0_20210820",
      "repository":"https://github.com/trendscenter/coinstac_fmriport_bforge",
      "description":"This computation preprocesses 12-ch and 32-ch fMRI data using a SPM pipeline",
      "testData": "tree\/main\/test"
   },
   "computation":{
      "type":"docker",
      "dockerImage":"coinstacteam/coinstac-fmri-pre",
      "command":[
         "python",
         "\/computation\/run_fmri.py"
      ],
      "input":{
				"data": {
	        "label": "File Path",
	        "type": "directory",
	        "items": ["File Path"],
					"default": "",
	        "source": "member",
	        "order": 0
	      },
         "standalone":{
            "label":"Standalone",
            "type":"boolean",
            "default":true,
            "order":0,
						"source": "owner"
         },
         "num_vols_to_remove":{
            "type":"number",
            "required":true,
            "label":"#Initial_vols to ignore",
            "tooltip":"Number of initial volumes to ignore",
						"source": "member"
         },
         "smoothing_x_mm":{
            "type":"range",
            "label":"Smoothing FWHM(mm) along x",
            "default":10,
            "min":1,
            "max":10,
            "step":1,
            "tooltip":"Full width half maximum smoothing kernel value along x in mm",
            "order":3,
            "group":"smoothing",
						"source": "owner"
         },
         "smoothing_y_mm":{
            "type":"range",
            "label":"Smoothing FWHM(mm) along y",
            "default":10,
            "min":1,
            "max":10,
            "step":1,
            "tooltip":"Full width half maximum smoothing kernel value along y in mm",
            "order":4,
            "group":"smoothing",
						"source": "owner"
         },
         "smoothing_z_mm":{
            "type":"range",
            "label":"Smoothing FWHM(mm) along z",
            "default":10,
            "min":1,
            "max":10,
            "step":1,
            "tooltip":"Full width half maximum smoothing kernel value along z in mm",
            "order":5,
            "group":"smoothing",
						"source": "owner"
         }
      },
      "output": {
        "covariates": {
          "type": "array",
          "items": [
            "boolean",
            "number"
          ]
        },
        "message": {
          "type": "string",
          "tooltip": "Output message from fMRI step"
        }
      },
			"display": {
	      "type": "string"
	    }
   }
}
