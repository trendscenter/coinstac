{
    "meta": {
        "name": "Decentralized GICA",
        "id": "gica",
        "version": "v1.0.0",
        "repository": "https:\/\/github.com\/MRN-Code\/coinstac_gica_pipeline",
        "description": "a demo for decentralized gica",
        "projectLink": "https://github.com/trendscenter/coinstac_gica_pipeline",
        "testDataLink": "https://github.com/trendscenter/coinstac_gica_pipeline/tree/master/test"
    },
    "computation": {
        "type": "docker",
        "dockerImage": "coinstacteam/gica",
        "command": [
            "python",
            "\/computation\/local.py"
        ],
        "remote": {
            "type": "docker",
            "dockerImage": "coinstacteam/gica",
            "command": [
                "python",
                "\/computation\/remote.py"
            ]
        },
        "input": {
            "data": {
              "label": "Data",
              "type": "files",
              "items": ["NIfTI"],
              "extensions": [["nii"]],
              "order": 0
            },
            "mask": {
                "label": "Mask",
                "type": "string",
                "source": "owner",
                "default": "\/computation\/local_data\/mask.nii",
                "order": 1
            },
            "num_ics": {
                "default": 20,
                "label": "Global Number of Independent Components",
                "type": "number",
                "source": "owner",
                "order": 3,
                "showValue": "Infomax ICA",
                "conditional": {
                  "variable": "ica",
                  "value": "Infomax ICA"
                }
            },
            "scica_template": {
                "label": "Spatially Constrained ICA Template",
                "type": "string",
                "order": 4,
                "default": "\/computation\/local_data\/NeuroMark.nii",
                "showValue": "Spatially Constrained",
                "conditional": {
                  "variable": "ica",
                  "value": "Infomax ICA"
                }
            },
            "fnc_window_size": {
                "default": 22,
                "label": "Sliding Window Size",
                "type": "number",
                "source": "owner",
                "order": 6,
                "showValue": "Dynamic FNC"
            },
            "dfnc_k": {
                "default": 5,
                "label": "Number of Clusters",
                "type": "number",
                "source": "owner",
                "order": 7,
                "showValue": "Dynamic FNC"
            },
            "results_html_path": {
              "order": 8,
              "label": "Results HTML Path",
              "default": "gica_cmd_gica_results/icatb_gica_html_report.html",
              "type": "string",
              "source": "owner"
            }
        },
        "output": {},
        "display": {
          "type": "iframe"
        }
    }
}
