{
  "meta": {
    "name": "Regression - VBM",
    "id": "regression-vbm",
    "version": "v1.0.0",
    "repository": "https:\/\/github.com\/trendscenter\/coinstac-regression-vbm",
    "description": "Decentralized Regression for Voxel-based Morphometry"
  },
  "computation": {
    "type": "docker",
    "dockerImage": "coinstacteam/regression-vbm",
    "command": [
      "python",
      "\/computation\/scripts\/local.py"
    ],
    "remote": {
      "type": "docker",
      "dockerImage": "coinstacteam/regression-vbm",
      "command": [
        "python",
        "\/computation\/scripts\/remote.py"
      ]
    },
    "input": {
      "lambda":
      {
        "default": 0,
        "label": "Lambda",
        "max": 1,
        "min": 0,
        "step": 0.05,
        "type": "number",
        "source": "owner"
      },
      "threshold":
      {
        "default": 0.2,
        "label": "Masking threshold",
        "max": 1,
        "min": 0,
        "type": "number",
        "source": "owner"
      },
      "voxel_size":
      {
        "default": 4,
        "label": "Voxel Size",
        "max": 6,
        "min": 0,
        "step": 0.5,
        "type": "number",
        "source": "owner"
      },
      "covariates": {
        "label": "Covariates",
        "type": "csv",
        "items": ["boolean", "number", "string"],
        "source": "member"
      },
      "data": {
        "label": "Data",
        "type": "freesurfer",
        "items": ["NiFTI"],
        "source": "owner"
      }
    },
    "output": {
      "avg_beta_vector": {
        "label": "Avg Beta Vector",
        "type": "array"
      },
      "beta_vector_local": {
        "label": "Beta Vector Local",
        "type": "array"
      },
      "r_2_global": {
        "label": "R2 Global",
        "type": "number"
      },
      "ts_global": {
        "label": "TS Global",
        "type": "array"
      },
      "ps_global": {
        "label": "PS Global",
        "type": "number"
      },
      "dof_global": {
        "label": "DOF Global",
        "type": "array"
      }
    },
    "display": {
      "type": "images"
    }
  }
}
