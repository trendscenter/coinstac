{
  "meta": {
    "name": "Ridge Regression (Singleshot) - FreeSurfer Volumes",
    "id": "ssr-fsl",
    "version": "v1.0.0",
    "repository": "https:\/\/github.com\/trendscenter\/coinstac-ssr-fsl",
    "description": "Decentralized Regression (Singleshot) for Brain Volumetric Data"
  },
  "computation": {
      "type": "docker",
      "dockerImage": "coinstacteam/ssr-fsl",
      "command": [
        "python",
        "\/computation\/scripts\/local.py"
      ],
      "remote": {
        "type": "docker",
        "dockerImage": "coinstacteam/ssr-fsl",
        "command": [
          "python",
          "\/computation\/scripts\/remote.py"
        ]
      },
      "input": {
        "lambda": {
          "default": 0,
          "label": "Lambda",
          "max": 1,
          "min": 0,
          "step": 0.05,
          "type": "number",
          "source": "owner"
        },
        "covariates": {
          "label": "Covariates",
          "type": "csv",
          "extensions": ["csv", "txt"],
          "items": ["boolean", "number"],
          "source": "member"
        },
        "data": {
          "label": "Data",
          "type": "freesurfer",
          "items": ["FreeSurfer"],
          "source": "owner"
        }
      },
      "output": {
        "regressions": {
          "label": "Regressions",
          "type": "array",
          "items": {
            "global_stats": {
              "label": "Global Stats",
              "type": "object",
              "items": {
                "avg_beta_vector": {
                  "label": "Avg Beta Vector",
                  "type": "array"
                },
                "r2_global": {
                  "label": "R2 Global",
                  "type": "number"
                },
                "ts_global": {
                  "label": "TS Global",
                  "type": "array"
                },
                "ps_global": {
                  "label": "PS Global",
                  "type": "number"
                },
                "dof_global": {
                  "label": "DOF Global",
                  "type": "array"
                }
              }
            },
            "local_stats": {
              "label": "Local Stats",
              "type": "object",
              "items": {
                "beta": {
                  "label": "Beta",
                  "type": "array"
                },
                "pval": {
                  "label": "PVal",
                  "type": "array"
                },
                "rsquared": {
                  "label": "R Squared",
                  "type": "number"
                },
                "sse": {
                  "label": "SSE",
                  "type": "number"
                },
                "tval": {
                  "label": "TVal",
                  "type": "array"
                }
              }
            },
            "ROI": {
              "label": "Region of Interest",
              "type": "string"
            }
          }
        }
      },
      "display": [
        {
          "type": "table",
          "tables": [
            {
              "source": "regressions",
              "subtables": [
                {
                  "source": "global_stats",
                  "subtitle": "ROI"
                },
                {
                  "source": "local_stats",
                  "subtitle": "ROI",
                  "subtables": "by-key"
                }
              ]
            }
          ]
        }
      ]
    }
  }
