{
  "meta": {
    "name": "Decentralized Deep Artificial Neural Networks in COINSTAC (GPU accelerated)",
    "id": "coinstac-dinunet-gpu",
    "version": "v1.0.0",
    "repository": "https:\/\/github.com\/trendscenter\/dinunet_implementations",
    "description": "GPU enabled NN implementations in COINSTAC with. This only runs on GPU available machines.",
    "compspecVersion": 2,
    "testData": "tree/master/datasets/test_fsl/input"
  },
  "computation": {
    "type": "docker",
    "dockerImage": "coinstacteam/coinstac-dinunet-gpu",
    "command": [
      "python"
    ],
    "containerOptions": {
      "HostConfig": {
        "DeviceRequests": [
          {
            "Drivers": "nvidia",
            "Capabilities": [
              [
                "gpu"
              ]
            ]
          }
        ],
        "ShmSize": 8589934592
      }
    },
    "remote": {
      "type": "docker",
      "dockerImage": "coinstacteam/coinstac-dinunet-gpu",
      "command": [
        "python"
      ]
    },
    "input": {
      "covariates": {
        "label": "Covariates",
        "type": "csv",
        "items": [
          "boolean",
          "number"
        ],
        "source": "member",
        "order": 1
      },
      "data": {
        "label": "Data",
        "type": "files",
        "items": [
          "Files"
        ],
        "extensions": [
          "csv",
          "txt",
          "h5"
        ],
        "source": "member",
        "order": 2
      },
      "task_id": {
        "default": "FS-Classification",
        "values": [
          "FS-Classification",
          "VBM-Classification",
          "ICA-Classification"
        ],
        "label": "Pick a NN task:",
        "type": "select",
        "source": "owner",
        "group": "NN Params",
        "order": 3
      },
      "mode": {
        "default": "train",
        "values": [
          "train",
          "test"
        ],
        "label": "NN Mode:",
        "type": "select",
        "source": "owner",
        "group": "NN Params",
        "order": 4
      },
      "agg_engine": {
        "default": "dSGD",
        "values": [
          "dSGD",
          "rankDAD"
        ],
        "label": "Pick aggregation engine:",
        "type": "select",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 5
      },
      "num_reducers": {
        "default": 2,
        "label": "Number of reducers in the aggregator(Default is good):",
        "type": "number",
        "source": "owner",
        "group": "NN Params",
        "order": 6
      },
      "batch_size": {
        "default": 16,
        "label": "Batch size:",
        "type": "number",
        "source": "owner",
        "group": "NN Params",
        "order": 7
      },
      "local_iterations": {
        "default": 1,
        "label": "Local gradient accumulation iterations(effective batch size = batch size * gradient accumulation iterations)",
        "type": "number",
        "source": "owner",
        "group": "NN Params",
        "order": 8
      },
      "learning_rate": {
        "default": 0.001,
        "label": "Learning rate:",
        "type": "number",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 9
      },
      "epochs": {
        "default": 101,
        "label": "Epochs:",
        "type": "number",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 10
      },
      "pretrain": {
        "default": false,
        "label": "Use the site with maximum data to pre-train locally as starting point:",
        "type": "boolean",
        "source": "owner",
        "group": "NN Params",
        "order": 11
      },
      "pretrain_args": {
        "default": {
          "epochs": 0,
          "learning_rate": 0.001,
          "batch_size": 16,
          "gpus": [
            0
          ],
          "local_iterations": 1,
          "validation_epochs": 1,
          "pin_memory": false,
          "num_workers": 0,
          "patience": 51
        },
        "label": "Pretraining arguments:",
        "type": "object",
        "source": "owner",
        "conditional": {
          "variable": "pretrain",
          "value": true
        },
        "group": "NN Params",
        "order": 12
      },
      "validation_epochs": {
        "default": 1,
        "label": "Run validation after every epochs:",
        "type": "number",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 13
      },
      "precision_bits": {
        "default": "32",
        "label": "Floating point precision for payload:",
        "type": "select",
        "values": [
          "32",
          "16"
        ],
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 14
      },
      "gpus": {
        "default": [
          0
        ],
        "label": "GPU IDs to use Eg. [0], [0, 1]:",
        "type": "object",
        "source": "member",
        "group": "NN Params",
        "order": 15
      },
      "pin_memory": {
        "default": false,
        "label": "Pin Memory:",
        "type": "boolean",
        "source": "member",
        "group": "NN Params",
        "order": 16
      },
      "num_workers": {
        "default": 0,
        "label": "Number of workers:",
        "type": "number",
        "source": "member",
        "group": "NN Params",
        "order": 17
      },
      "patience": {
        "default": 35,
        "label": "Early stopping patience epochs:",
        "type": "number",
        "source": "owner",
        "conditional": {
          "variable": "mode",
          "value": "train"
        },
        "group": "NN Params",
        "order": 18
      },
      "split_ratio": {
        "default": [
          0.8,
          0.1,
          0.1
        ],
        "label": "Data split ratio for train, validation, test in the same order:",
        "type": "object",
        "source": "owner",
        "group": "NN Params",
        "order": 22
      },
      "num_folds": {
        "default": null,
        "label": "Number of folds for K-Fold Cross Validation(Mutually exclusive with split ratio):",
        "type": "number",
        "source": "owner",
        "group": "NN Params",
        "order": 23
      },
      "FS-Classification_args": {
        "default": {
          "labels_column": "isControl",
          "input_size": 66,
          "hidden_sizes": [
            256,
            128,
            64,
            32
          ],
          "num_class": 2,
          "dad_reduction_rank": 10,
          "dad_num_pow_iters": 5,
          "dad_tol": 0.001,
          "split_files": []
        },
        "label": "FreeSurfer classification parameters.",
        "type": "object",
        "source": "owner",
        "group": "Computation",
        "conditional": {
          "variable": "task_id",
          "value": "FS-Classification"
        },
        "order": 24
      },
      "VBM-Classification_args": {
        "default": {
          "labels_column": "isControl",
          "model_scale": 1,
          "input_channel": 1,
          "num_class": 2,
          "split_files": []
        },
        "label": "VBM classification parameters.",
        "type": "object",
        "source": "owner",
        "conditional": {
          "variable": "task_id",
          "value": "VBM-Classification"
        },
        "group": "Computation",
        "order": 25
      },
      "ICA-Classification_args": {
        "default": {
          "num_class": 2,
          "monitor_metric": "auc",
          "metric_direction": "maximize",
          "log_header": "Loss|AUC",
          "full_comp_size": 100,
          "spatial_dim": 140,
          "window_size": 20,
          "window_stride": 10,
          "seq_len": 13,
          "data_file": "<Required!>",
          "labels_file": "<Required!>",
          "components_file": "<Required!>",
          "split_files": [],
          "input_size": 256,
          "hidden_size": 384,
          "dad_reduction_rank": 10,
          "dad_num_pow_iters": 5,
          "dad_tol": 0.001
        },
        "label": "ICA classification parameters.",
        "type": "object",
        "source": "owner",
        "conditional": {
          "variable": "task_id",
          "value": "ICA-Classification"
        },
        "group": "Computation",
        "order": 26
      }
    },
    "output": {
    },
    "display": {
      "type": "string"
    }
  }
}
